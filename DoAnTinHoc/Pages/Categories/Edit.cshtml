@page
@model DoAnTinHoc.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Sửa danh mục";
}

<h2>Sửa danh mục</h2>

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="mb-3">
        <label class="form-label">Tên danh mục</label>
        <input asp-for="Category.Name" class="form-control" required />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Lưu</button>
    <a class="btn btn-secondary" href="/Categories">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
