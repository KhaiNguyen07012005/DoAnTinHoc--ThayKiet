@page
@model DoAnTinHoc.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Thêm / Sửa nhân viên";
}

<h2>@(Model.Employee.Id == 0 ? "Thêm nhân viên mới" : "Chỉnh sửa nhân viên")</h2>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Employee.Id" />

    <div class="mb-3">
        <label class="form-label">Tên nhân viên</label>
        <input asp-for="Employee.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Chức vụ</label>
        <input asp-for="Employee.Position" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Số điện thoại</label>
        <input asp-for="Employee.Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Employee.Email" class="form-control" type="email" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Employee.Active" />
        <label class="form-check-label">Đang làm việc</label>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fa fa-save"></i> Lưu
    </button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Quay lại</a>
</form>
