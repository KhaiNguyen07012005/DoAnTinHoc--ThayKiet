@page
@model DoAnTinHoc.Pages.Products.EditModel
@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<h2>Sửa sản phẩm #@Model.Product?.Id</h2>

@if (!string.IsNullOrEmpty(TempData["Error"] as string))
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Show validation errors ở đầu -->
<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

@if (Model.Product == null)
{
    <div class="alert alert-warning">Không tìm thấy sản phẩm.</div>
    <a class="btn btn-secondary" asp-page="./Index">Quay lại</a>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />  <!-- Hidden Id để bind OnPost -->

        <div class="mb-3">
            <label asp-for="Product.Name" class="form-label">Tên <span class="text-danger">*</span></label>
            <input asp-for="Product.Name" class="form-control" required />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <!-- THÊM SELECT DANH MỤC Ở ĐÂY -->
        <div class="mb-3">
            <label asp-for="Product.CategoryId" class="form-label">Danh mục <span class="text-danger">*</span></label>
            <select asp-for="Product.CategoryId" class="form-select" required>
                <option value="">-- Chọn --</option>
                @foreach (var c in Model.Categories)
                {
                    <option value="@c.Id" selected="@(Model.Product.CategoryId == c.Id ? "selected" : null)">@c.Name</option>
                }
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Price" class="form-label">Giá <span class="text-danger">*</span></label>
            <input asp-for="Product.Price" class="form-control" type="number" step="0.01" min="0" required />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Quantity" class="form-label">Số lượng <span class="text-danger">*</span></label>
            <input asp-for="Product.Quantity" class="form-control" type="number" step="1" min="0" required />
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Description" class="form-label">Mô tả</label>
            <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a class="btn btn-secondary" asp-page="./Index">Hủy</a>
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}