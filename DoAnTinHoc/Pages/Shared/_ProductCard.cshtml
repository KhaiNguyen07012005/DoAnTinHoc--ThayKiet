@model DoAnTinHoc.Models.Product
<div class="product-card">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <div class="product-title">@Model.Name</div>
            <div class="product-sub">@Model.Description</div>
        </div>
        <div class="text-end">
            <div class="fw-bold">@String.Format("{0:N0}", Model.Price) ₫</div>
            <div class="small-muted">#@Model.Id</div>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between align-items-center">
        <div>
            <div class="kv">Tồn: <span class="fw-semibold">@Model.Quantity</span></div>
            <div class="small-muted">Ngày tạo: @Model.CreatedDate.ToString("yyyy-MM-dd")</div>
        </div>
        <div class="card-actions">
            <div class="card-actions">
                <a class="btn btn-sm btn-outline-primary" href="/Products/Details?id=@Model.Id">Xem</a>
                <a class="btn btn-sm btn-outline-warning" href="/Products/Edit?id=@Model.Id">Sửa</a>
                <a class="btn btn-sm btn-outline-danger" data-confirm="Bạn muốn xóa sản phẩm này?" href="/Products/Delete?id=@Model.Id">Xóa</a>
            </div>
        </div>

    </div>
</div>
