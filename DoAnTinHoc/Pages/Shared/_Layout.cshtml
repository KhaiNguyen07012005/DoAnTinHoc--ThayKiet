<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] NhàKhoIT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="d-flex min-vh-100">
        <!-- SIDEBAR -->
        <nav class="sidebar bg-primary text-white vh-100 position-fixed" style="width: 250px; z-index: 1000;">
            <div class="p-3">
                <h5 class="mb-3 text-center fw-bold">Nhà Kho IT</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Index">
                            <i class="fas fa-home me-2"></i> Trang chủ
                        </a>
                    </li>

                    <!-- DANH MỤC -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Categories/Index">
                            <i class="fas fa-tags me-2"></i> Danh mục
                        </a>
                    </li>

                    <!-- SẢN PHẨM -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Products/Index">
                            <i class="fas fa-boxes me-2"></i> Sản phẩm
                        </a>
                    </li>

                    <!-- NHÂN VIÊN -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Employees/Index">
                            <i class="fas fa-user-tie me-2"></i> Nhân viên
                        </a>
                    </li>

                    <!-- PHIẾU NHẬP -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Imports/Index">
                            <i class="fas fa-file-import me-2"></i> Phiếu nhập kho
                        </a>
                    </li>

                    <!-- PHIẾU XUẤT -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Exports/Index">
                            <i class="fas fa-file-export me-2"></i> Phiếu xuất kho
                        </a>
                    </li>

                    <!-- BÁO CÁO -->
                    <li class="nav-item">
                        <a class="nav-link text-white" data-bs-toggle="collapse" href="#collapseReports" role="button" aria-expanded="false">
                            <i class="fas fa-chart-bar me-2"></i> Báo cáo - Thống kê
                        </a>
                        <div class="collapse ps-3" id="collapseReports">
                            <a class="nav-link text-white small" asp-page="/Reports/Inventory">
                                <i class="fas fa-warehouse me-2"></i> Báo cáo tồn kho
                            </a>
                            <a class="nav-link text-white small" asp-page="/Reports/History">
                                <i class="fas fa-history me-2"></i> Lịch sử nhập - xuất
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- MAIN CONTENT -->
        <div class="flex-grow-1" style="margin-left: 250px;">
            <!-- HEADER -->
            <header class="bg-white border-bottom shadow-sm">
                <div class="container d-flex align-items-center justify-content-between py-3">
                    <div class="d-flex align-items-center">
                        <a class="navbar-brand me-3" asp-page="/">Quản lý nhà kho</a>
                    </div>
                    <div>
                        <span class="navbar-text me-3">Xin chào, <strong>Admin</strong></span>
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                        </button>
                    </div>
                </div>
            </header>

            <!-- BODY -->
            <main class="main-content container py-4">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="bg-light border-top mt-auto">
                <div class="container py-3 d-flex justify-content-between">
                    <div class="text-muted">© 2025 Quản lý Nhà Kho IT</div>
                    <div class="text-muted">Xây dựng bằng ASP.NET Core & Bootstrap 5</div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
