@page
@model DoAnTinHoc.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (Model.Product == null)
            {
                <div class="alert alert-warning">
                    <h4>Không tìm thấy sản phẩm!</h4>
                    <p>Có thể sản phẩm đã bị xóa hoặc ID không hợp lệ.</p>
                    <a asp-page="./Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">@Model.Product.Name</h4>
                            <span class="badge bg-light text-dark fs-6">#@Model.Product.Id</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text fs-5">@Html.Raw(Model.Product.Description ?? "Chưa có mô tả.")</p>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="border rounded p-3 bg-light">
                                    <h6 class="text-primary mb-2">Thông tin giá & tồn kho</h6>
                                    <p><strong>Giá bán:</strong> @String.Format("{0:N0}", Model.Product.Price) ₫</p>
                                    <p><strong>Số lượng tồn:</strong> <span class="badge bg-success">@Model.Product.Quantity</span></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="border rounded p-3 bg-light">
                                    <h6 class="text-primary mb-2">Thông tin khác</h6>
                                    <p><strong>Ngày tạo:</strong> @Model.Product.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                                    <!-- Thêm nếu có: @* <p><strong>Danh mục:</strong> @Model.Product.Category?.Name</p> *@ -->
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-outline-warning">Sửa sản phẩm</a>
                            <div>
                                <a asp-page="./Index" class="btn btn-outline-secondary me-2">Quay lại danh sách</a>
                                <!-- Nút xóa nếu cần: <a asp-page="./Delete" asp-route-id="@Model.Product.Id" class="btn btn-outline-danger" onclick="return confirm('Xóa sản phẩm này?')">Xóa</a> -->
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>